<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_birthdays"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.a5.newnotes.activities.events_activities.EventActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cake_variant"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_birthdays_activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Birthdays Title"
            android:textColor="@color/color_marker_birthdays"
            android:textSize="@dimen/item_activity_title_size"
            android:layout_weight="4"/>

        <ImageView
            android:id="@+id/iv_birthday_menu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_birthdays_activity_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Birthdays Date"
        android:textColor="@color/color_item_activity_date"
        android:textSize="@dimen/item_activity_date_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center"
        android:text="BIRTHDAYS"
        android:textColor="@color/color_marker_birthdays"
        android:textSize="40sp"
        android:textStyle="bold" />


</RelativeLayout>