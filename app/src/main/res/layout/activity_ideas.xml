<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ideas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.a5.newnotes.activities.events_activities.EventActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lightbulb_on"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_ideas_activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ideas Title"
            android:textColor="@color/color_marker_ideas"
            android:textSize="@dimen/item_activity_title_size"
            android:gravity="center"
            android:layout_weight="4"/>

        <ImageView
            android:id="@+id/iv_idea_menu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_ideas_activity_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ideas Date"
        android:textColor="@color/color_item_activity_date"
        android:textSize="@dimen/item_activity_date_size"
        android:gravity="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_ideas_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ideas Description"
        android:textColor="@color/color_item_activity_description"
        android:textSize="@dimen/item_activity_description_size"
        android:gravity="center"
        android:layout_below="@+id/tv_ideas_activity_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center"
        android:text="IDEAS"
        android:textColor="@color/color_marker_ideas"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>